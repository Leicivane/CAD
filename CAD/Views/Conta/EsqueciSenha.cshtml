@model CAD.Models.EsqueciSenhaVM
@{
    ViewBag.Title = "Esqueci a Senha";
    Layout = "~/Views/Shared/_LayoutConta.cshtml";
}

@using (Html.BeginForm("EsqueciSenha", "Conta"))
{
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">Esqueci a senha - CADSYS</div>
            <div class="panel-body">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(m => m.Login, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control", data_mask = "000.000.000-00" })
                    @Html.ValidationMessageFor(m => m.Login)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="panel-footer">
                <div class="pull-right">
                    <input type="submit" class="btn btn-default btn-primary" value="Enviar" />
                    @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
                </div>
                <div style="clear: both"></div>
            </div>
        </div>
    </div>
}